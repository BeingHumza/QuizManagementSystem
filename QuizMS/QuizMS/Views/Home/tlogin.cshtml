@model QuizMS.Models.tbl_admin

@{
    ViewBag.Title = "Admin Login";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h1>Admin Login</h1>

    <div class="form-horizontal" style="background-color:#00044b;width:320px;color:white; padding:20px;border-radius:10px">



        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="width:1px">
            @Html.LabelFor(model => model.ad_name, "Username", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width:650px">
                @Html.EditorFor(model => model.ad_name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ad_name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="width:1px">
            @Html.LabelFor(model => model.ad_password, "Password", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="width:650px">
                @Html.PasswordFor(model => model.ad_password, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ad_password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="margin-left:220px;">
                <input type="submit" value="Login" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<p style="color:red; margin-top:-30px; margin-left:20px;">@ViewBag.msg</p>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
