@model QuizMS.Models.tbl_students

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>register</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-image: url('../../Content/Img/login.jpg');
            background-size: cover;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:#00044b;font-size:18px;">
        <div class="container">
            <div class="navbar-header">

                @Html.ActionLink("WEB QUIZ SYSTEM", "Index", "Home", new { area = " " }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="color:white;">@Html.ActionLink("Admin Login", "tlogin", "Home")</li>
                    <li>@Html.ActionLink("Student Login", "slogin", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    @if (ViewBag.msg != null)
    {

        <div class="alert alert-danger">
            <strong>Error!</strong> @ViewBag.msg
        </div>
    }

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>


    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8  col-md-8  col-sm-8">
                <div class="container " style="width:40%">
                    <br />
                    <br />
                    <br />
                    <br />



                    @using (@Html.BeginForm())
                    {<h1>Registration</h1>
                        <div class="form-horizontal" style="background-color:#00044b;width:350px;color:white; padding:40px;border-radius:10px">

                            <div class="form-group">
                                <label for="username" style="color:white">Username:</label>

                                @Html.TextBoxFor(x => x.std_name, htmlAttributes: new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                <label for="email" style="color:white">Email:</label>
                                @*       <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">*@
                                @Html.TextBoxFor(x => x.std_email, htmlAttributes: new { @class = "form-control" })

                            </div>
                            <div class="form-group">
                                <label for="pwd" style="color:white">Password:</label>
                                @Html.PasswordFor(x => x.std_password, new { @class = "form-control" })
                            </div>

                            <input type="submit" value="Register Now!" class="btn btn-default btn-block" style="width:120px;margin-left:170px" />
                        </div>
                    }

                </div>
            </div>
            <div class="col-lg-4  col-md-4  col-sm-4">

            </div>


        </div>

    </div>
</body>
</html>
